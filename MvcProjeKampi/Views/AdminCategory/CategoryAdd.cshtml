@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>

@using (Html.BeginForm("CategoryAdd", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(c => c.CategoryName,new { @class="form-control", @style = "width:325px" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /><br />
        @Html.Label("Açıklama")
        @Html.TextAreaFor(c => c.CategoryDescription, new { @class = "form-control", @style= "width:325px"})
        @Html.ValidationMessageFor(x => x.CategoryDescription)
        <br />
        <button class="btn btn-success">Kaydet</button>

    </div>
}

