@using EntityLayer.Concrete
@model List<Category>
<!--Verileri listelemek için kullanacağımız tabloyu belirttik-->
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>@item.CategoryStatus</td>
        </tr>
    }
</table><br />
       <a href="/Category/CategoryAdd" class="btn btn-info">Yeni Kategori</a>
<!--Yönlendirme işlemi CategoryController içerisinde bulunan AddCategory metodun bulunduğu yere git  -->