@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yazar Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddWriter", "Writer", FormMethod.Post)) 
{ 
<div class="form-group">
    @Html.Label("Yazar Adı")
    @Html.TextBoxFor(x => x.Writername, new { @class = "form-control", @style = "width:325px" })
    @Html.ValidationMessageFor(x => x.Writername, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Yazar Soyadı")
    @Html.TextBoxFor(x => x.WriterSurName, new { @class = "form-control", @style = "width:325px" })
    @Html.ValidationMessageFor(x => x.WriterSurName, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Yazar Mail")
    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @style = "width:325px;" })
    @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Yazar Şifresi")
    @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", @style = "width:325px" })
    @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Yazar Görsel Linki")
    @Html.TextAreaFor(x => x.WriterImage, new { @class = "form-control", @style = "width:325px " })
    @Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Yazar Ünvanı")
    @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control", @style = "width:325px" })
    @Html.ValidationMessageFor(x => x.WriterTitle, "", new { @class = "text-danger" })
    <br />
    @Html.Label("Yazar Hakkında")
    @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control", @style = "width:325px", rows = "6", cols = "20" })
    @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-info">Yazarı Kaydet</button>

</div>
}

